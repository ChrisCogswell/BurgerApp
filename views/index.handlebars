<div class="container">
    <div class="row">
      <div class="col-sm-3"></div>
      <div class="col-sm-5">
<h1>Burger Time!</h1>
      </div>   
      <div class="col-sm-3"></div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-6">
        <h2>These Burgers are ready to eat!</h2>
        <ul>
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/unless}}
          {{/each}}
        </ul>
        </div>
                
        <div class="col-sm-6">
        <h2>These Burgers got devoured!</h2>
        <ul>
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block2 devoured=false}}
            {{/if}}
          {{/each}}
        </ul>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
      <div class="col-sm-3"></div>
      <div class="col-sm-5">
<h2>Create a Burger!</h2>
<form class="create-form">

  <div class="form-group">
      <button type="submit">Add Burger</button>
    <input type="text" id="bu" name="name">
  </div>
  
</form>
</div>   
      <div class="col-sm-3"></div>
    </div>
</div>
